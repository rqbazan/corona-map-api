{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "tests/*": ["tests/*"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "exclude": ["dist"]
}
